@using PortalWars.Web.Data

<div class="parchment-card party-card">
    <div class="d-flex align-items-start gap-3">
        <div class="portrait">
            @if (!string.IsNullOrWhiteSpace(Model.PortraitUrl))
            {
                <img src="@Model.PortraitUrl" alt="@Model.Name portrait" />
            }
            else
            {
                <div class="portrait-placeholder">+</div>
            }
        </div>

        <div class="flex-grow-1">
            <div class="d-flex flex-wrap align-items-baseline gap-2">
                <h3 class="party-name m-0">@Model.Name</h3>
                <span class="party-meta">@Model.Type</span>
                @if (!string.IsNullOrWhiteSpace(Model.Owner))
                {
                    <span class="party-level">Assigned: @Model.Owner</span>
                }
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Role))
            {
                <div class="party-hook mt-2"><strong>Role:</strong> @Model.Role</div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Hook))
            {
                <div class="party-hook mt-2">@Model.Hook</div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Companion Model { get; set; } = default!;
}

<div class="party-standard">
    @if (!string.IsNullOrWhiteSpace(ImageUrl))
    {
        <img src="@ImageUrl" alt="Party Standard" />
    }
    else
    {
        <div class="standard-placeholder">
            <div class="standard-title">Standard</div>
            <div class="standard-subtitle">Add an image later</div>
        </div>
    }
</div>

@code {
    [Parameter] public string? ImageUrl { get; set; }
}
